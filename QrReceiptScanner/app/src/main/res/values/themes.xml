<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.QrReceiptScanner" parent="Theme.MaterialComponents.Light">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/cyan_500</item>
		<item name="colorPrimaryVariant">@color/cyan_500</item>
		<item name="colorOnPrimary">@android:color/white</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/cyan_200</item>
		<item name="colorSecondaryVariant">@color/cyan_300</item>
		<item name="colorOnSecondary">@android:color/white</item>

		<item name="backgroundColor">@android:color/white</item>"
		<item name="colorOnBackground">@color/blue_grey_800</item>

		<item name="colorSurface">?attr/backgroundColor</item>
		<item name="colorOnSurface">?attr/colorOnBackground</item>

		<item name="android:textColor">@color/blue_grey_800</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
		<!-- Customize your theme here. -->
	</style>

	<style name="Theme.QrReceiptScanner.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>
</resources>